<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/pwd_account_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="账号：" />

    <EditText
        android:id="@+id/pwd_account_content"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/pwd_account_text"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="300079" />

    <TextView
        android:id="@+id/pwd_password_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/pwd_account_content"
        android:gravity="center"
        android:text="密码：" />

    <EditText
        android:id="@+id/pwd_password_content"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/pwd_password_text"
        android:gravity="center_vertical"
        android:text="test123456" />

    <ImageView
        android:id="@+id/pwd_image_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pwd_image_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_delete" />
</RelativeLayout>
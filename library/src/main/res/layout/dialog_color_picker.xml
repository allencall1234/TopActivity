<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.example.zlt.library.SatValPicker
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/satValBox"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true">

    </com.example.zlt.library.SatValPicker>

    <com.example.zlt.library.HuePicker
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/hueBar"
        android:indeterminate="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:progress="1"
        android:background="@drawable/transparent"
        android:indeterminateOnly="false"
        android:minHeight="25dp"
        android:maxHeight="25dp"
        android:splitTrack="false"
        android:progressDrawable="@drawable/transparent"
        android:thumb="@drawable/slider_thumb"
        android:max="360"
        tools:ignore="UnusedAttribute"
        android:layout_below="@+id/satValBox"
        android:layout_marginTop="10dp"/>

    <com.example.zlt.library.OpacityPicker
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/opacityBar"
        android:layout_below="@+id/hueBar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:progress="255"
        android:max="255"
        android:minHeight="25dp"
        android:maxHeight="25dp"
        android:progressDrawable="@drawable/opacity_box_bg_land"
        android:thumb="@drawable/slider_thumb"
        android:splitTrack="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opacityBar"
        android:layout_marginTop="10dp"
        android:id="@+id/previewWithHex"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/preview"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:src="@mipmap/checker"
                android:adjustViewBounds="false"
                android:scaleType="matrix" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/opacityBar"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/oldColorPreviewBox" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/opacityBar"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/colorPreviewBox">

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/preview"
            android:layout_marginRight="20dp"
            android:id="@+id/hexHolder">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:id="@+id/hex"
                    android:layout_alignParentRight="false"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"
                    android:paddingRight="0dp"
                    android:layout_marginRight="0dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hexVal"
                    android:textSize="20sp"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/previewWithHex"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/colorComponents">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hsv">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:id="@+id/hsvEditIcon"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="false"
                    android:src="@drawable/ic_mode_edit_white_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:measureWithLargestChild="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H: 0 \u0b0"
                        android:id="@+id/hue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S: "
                        android:id="@+id/sat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V: "
                        android:id="@+id/val" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rgb">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:id="@+id/rgbEditIcon"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="false"
                    android:src="@drawable/ic_mode_edit_white_24dp"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:measureWithLargestChild="true"
                    android:orientation="vertical"
                    android:layout_alignParentRight="false"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R: "
                        android:id="@+id/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="G: "
                        android:id="@+id/green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B: "
                        android:id="@+id/blue" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:measureWithLargestChild="true"
                    android:orientation="vertical"
                    android:layout_alignParentRight="false"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A: "
                        android:id="@+id/alpha" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
